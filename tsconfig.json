{
  "compilerOptions": {
    "noImplicitAny": true,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "outDir": "lib",
    "declaration": true,
    "isolatedModules": true
  },
  "include": [
    "modules/**/*",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
